{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/u/(.*)",   "destination": "/api/index.js" },
    { "source": "/healthz",  "destination": "/api/index.js" },
    { "source": "/public/(.*)", "destination": "/$1" }
  ]
}
